// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model User {
  id             String        @id @unique // Customer ID (manual input)
  password       String
  isClaimed      Boolean       @default(false) // Kept for legacy, but we'll use credits now
  credits        Int           @default(1) // New: Number of times user can play
  assignedReward String? // Name of the reward
  playedGame     GameCategory? // Which game they played
  claims         Claim[] // New: Relation to claim history
  assignments    RewardAssignment[] // New: Specific reward assignments
  creditHistory  CreditHistory[] // New: Credit transaction history
  createdAt      DateTime      @default(now())
}

model Config {
  key   String @id
  value String
}

model Reward {
  id        String       @id @default(cuid())
  name      String
  imageUrl  String?
  category  GameCategory @default(BOX)
  stock     Int          @default(1)
  price     Int          @default(1) // New: Cost in credits to claim
  gameSettings Json?     // New: Game-specific settings (e.g. probability, color)
  assignments RewardAssignment[] // New: Relation to assignments
  createdAt DateTime     @default(now())
}

model Claim {
  id         String       @id @default(cuid())
  userId     String
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  rewardName String
  category   GameCategory
  createdAt  DateTime     @default(now())
}

model RewardAssignment {
  id         String           @id @default(cuid())
  userId     String
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  rewardId   String
  reward     Reward           @relation(fields: [rewardId], references: [id], onDelete: Cascade)
  status     AssignmentStatus @default(ASSIGNED)
  assignedAt DateTime         @default(now())
  claimedAt  DateTime?
}

model CreditHistory {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount      Int        // Positive for add, Negative for spend
  type        CreditType
  description String?    // e.g. "Admin Top-up", "Played Lucky Wheel"
  createdAt   DateTime   @default(now())
}

enum CreditType {
  ADMIN_ADJUSTMENT
  SPEND
  REFUND
}

enum AssignmentStatus {
  ASSIGNED
  CLAIMED
  EXPIRED
}

enum GameCategory {
  BOX
  WHEEL
  PLINKO
  SCRATCH
}
