// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Admin {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model User {
  id             String        @id // Customer ID (manual input)
  password       String
  isClaimed      Boolean       @default(false)
  assignedReward String?       // Name of the reward
  playedGame     GameCategory? // Which game they played
  createdAt      DateTime      @default(now())
}

model Config {
  key   String @id
  value String
}

model Reward {
  id        String       @id @default(uuid())
  name      String
  imageUrl  String?
  category  GameCategory @default(BOX)
  createdAt DateTime     @default(now())
}

enum GameCategory {
  BOX
  WHEEL
  PLINKO
  SCRATCH
}
